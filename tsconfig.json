{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "noImplicitAny": true,
    "strict": true,
    "module": "esnext",
    "target": "es6",
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "esModuleInterop": true,
    "rootDirs": [
      "src",
      "stories"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "include": [
    "src"
  ]
}
